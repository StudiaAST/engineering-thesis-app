@page "/contract-details/{Id:int}"
@attribute [Authorize]
@inject HttpClient Http
@inject NavigationManager Navigation
@using CHFrontend.Models

@if (isLoading)
{
    <div class="state-container text-center">
        <div>
            <div class="loading-spinner"></div>
            <h4 class="mb-3">Ładowanie danych...</h4>
            <p class="text-muted">Proszę czekać, pobieramy dane...</p>
        </div>
    </div>
}
else if (contract == null)
{
    <div class="state-container">
        <div>
            <div class="state-icon bg-danger bg-opacity-10 text-danger">
                <i class="bi bi-x-circle"></i>
            </div>
            <h4 class="mb-3">Nie udało się pobrać danych z API!</h4>
            <p class="text-muted mb-4">Sprawdź połączenie z internetem lub spróbuj ponownie później.</p>
        </div>
    </div>
}
else
{
    <div class="row align-items-center mb-3">
        <div class="col">
            <h2 class="mb-2">
                <i class="bi bi-file-earmark-post text-primary"></i> Szczegóły zlecenia
            </h2>
            <p class="text-muted mb-0">
                Numer zlecenia: <strong>@contract.ContractNumber</strong> |
                ID: <strong>#@contract.Id</strong>
            </p>
        </div>
    </div>
    <div class="row">
        <!-- Left column -->
        <div class="col-lg-8">
            <!-- Basic info -->
            <div class="card mb-3">
                <div class="card-header">
                    <i class="bi bi-info-circle me-2"></i>Podstawowe informacje
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="text-uppercase mb-1 fw-bold text-secondary small">Nazwa zlecenia</div>
                            <div class="mb-3">@contract.Name</div>
                        </div>
                        <div class="col-md-6">
                            <div class="text-uppercase mb-1 fw-bold text-secondary small">Numer zlecenia</div>
                            <div class="mb-3">@contract.ContractNumber</div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="text-uppercase mb-1 fw-bold text-secondary small">Data rozpoczęcia</div>
                            <div class="mb-3">
                                <i class="bi bi-calendar-check text-primary me-2"></i>
                                @contract.StartDate.GetDateTimeFormats('d')[0]
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="text-uppercase mb-1 fw-bold text-secondary small">Data zakończenia</div>
                            <div class="mb-3">
                                <i class="bi bi-calendar-x text-primary me-2"></i>
                                @contract.EndDate.GetDateTimeFormats('d')[0]
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="text-uppercase mb-1 fw-bold text-secondary small">Status</div>
                            <div class="mb-3">
                                <span class="badge text-bg-secondary">
                                    @contract.Status
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Description -->
            <div class="card mb-3">
                <div class="card-header">
                    <i class="bi bi-card-text me-2"></i>Opis zlecenia
                </div>
                <div class="card-body">
                    <p class="mb-0">@contract.Description</p>
                </div>
            </div>

            <!-- Contract history -->
            <div class="card mb-3">
                <div class="card-header">
                    <i class="bi bi-clock-history me-2"></i>Historia zmian
                </div>
                <div class="card-body">
                    <div class="timeline-item">
                        <div class="timeline-dot"></div>
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6 class="mb-1">Status zmieniony na "Zakończona"</h6>
                                <p class="text-muted small mb-0">Jan Kowalski • 01.01.2026, 15:23</p>
                            </div>
                        </div>
                    </div>
                    <div class="timeline-item">
                        <div class="timeline-dot"></div>
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6 class="mb-1">Zlecenie utworzone</h6>
                                <p class="text-muted small mb-0">System • 01.01.2026, 15:23</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right column -->
        <div class="col-lg-4">
            <!-- Contractor -->
            <div class="card mb-3">
                <div class="card-header">
                    <i class="bi bi-person-badge me-2"></i>Wykonawca
                </div>
                <div class="card-body">
                    <div class="contractor-card">
                        <div class="d-flex align-items-start mb-3">
                            <div class="flex-grow-1">
                                <h5 class="mb-1">@contract.Contractor.CompanyName</h5>
                                <div class="badge text-bg-secondary small">
                                    @contract.Contractor.Status
                                </div>
                            </div>
                        </div>
                        <div class="mb-2">
                            <i class="bi bi-geo-alt text-primary me-2"></i>
                            <span class="text-muted">@contract.Contractor.ContactInfo</span>
                        </div>
                        <div class="mb-2">
                            <i class="bi bi-telephone text-primary me-2"></i>
                            <span class="text-muted">+48 500 120 900</span>
                        </div>
                        <div class="mt-3">
                            <a href="#" class="btn btn-sm btn-outline-secondary disabled w-100">
                                <i class="bi bi-eye me-2"></i>Zobacz profil wykonawcy
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick actions -->
            <div class="card mb-3">
                <div class="card-header">
                    <i class="bi bi-lightning me-2"></i>Szybkie akcje
                </div>
                <div class="card-body">
                    <button class="btn btn-sm btn-outline-secondary w-100 mb-2">
                        <i class="bi bi-pencil me-2"></i>Edytuj
                    </button>
                    <button class="btn btn-sm btn-outline-secondary disabled w-100 mb-2">
                        <i class="bi bi-printer me-2"></i>Drukuj
                    </button>
                    <button class="btn btn-sm btn-outline-secondary disabled w-100 mb-2">
                        <i class="bi bi-file-earmark-arrow-down me-2"></i>Pobierz dokumenty
                    </button>
                    <button class="btn btn-sm btn-outline-danger w-100">
                        <i class="bi bi-trash me-2"></i>Usuń
                    </button>
                </div>
            </div>
        </div>
    </div>
}


@code {
    [Parameter] public int Id { get; set; }

    [CascadingParameter]
    private Task<AuthenticationState> authenticationStateTask { get; set; }

    private ContractDetailsDto? contract;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await GetContractById(Id);
    }

    private async Task GetContractById(int id)
    {
        try
        {
            var result = await Http.GetFromJsonAsync<ContractDetailsDto>($"api/Contract/{id}");
            contract = result;
        }
        catch (HttpRequestException ex) when (ex.StatusCode == HttpStatusCode.Unauthorized)
        {
            // Token wygasł w trakcie działania aplikacji
            Navigation.NavigateTo("/login");
        }
        catch (HttpRequestException ex) when (ex.StatusCode == HttpStatusCode.NotFound)
        {
            Navigation.NavigateTo("/");
        }
        catch (Exception)
        {
            contract = null;
        }
        finally
        {
            isLoading = false;
        }

    }

}
