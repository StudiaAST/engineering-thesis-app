                    <h3 class="mb-2 text-light">Zmiana hasła</h3>
                    <p class="mb-0 text-light">Przed zalogowaniem należy zmienić hasło.</p>
                </div>
                <div class="card-body p-4">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger">@errorMessage</div>
                    }

                    <EditForm EditContext="editContext" OnValidSubmit="HandlePasswordChange">
