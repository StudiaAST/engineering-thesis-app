@page "/contractors"
@using System.Net.Http.Json
@using System.Net
@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using CHFrontend.Helpers
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@attribute [Authorize]
@inject AuthenticationStateProvider AuthenticationStateProvider

<div class="row align-items-center">
    <div class="col">
        <h2 class="fw-bold"> Wykonawcy</h2>
        <p class="text-muted">Przeglądaj, dodawaj i modyfikuj wykonawców.</p>
    </div>
    <div class="col-auto">
    @*     <AuthorizeView Roles="Admin, Manager">
    <Authorized>  *@
            <button class="btn btn-sm btn-success" @onclick="StartAddingNewContractor">
                <i class="bi bi-plus-circle me-2"></i>Nowy wykonawca
            </button>
             @* </Authorized>  *@
            @* <NotAuthorized> *@
                @* Opcjonalnie: Co widzi zwykły użytkownik? Np. nic, albo ikonę kłódki *@
            @*     <span class="text-muted small"><i class="bi bi-lock"></i> Brak uprawnień</span>
            </NotAuthorized> *@
         @* </AuthorizeView>  *@
    </div>
</div>

    @if (!string.IsNullOrEmpty(mainAlertMessage))
    {
        <div class="alert @mainAlertClass alert-dismissible fade show mb-3" role="alert">
            @if(mainAlertClass.Contains("success")) { <i class="bi bi-check-circle-fill me-2"></i> }
            else if(mainAlertClass.Contains("danger")) { <i class="bi bi-exclamation-triangle-fill me-2"></i> }
            else { <i class="bi bi-info-circle-fill me-2"></i> }

            @mainAlertMessage
            <button type="button" class="btn-close" @onclick="() => mainAlertMessage = null"></button>
        </div>
    }

    <div class="card shadow mb-4 overflow-hidden">
        <div class="p-3 border-bottom">
            <div class="row align-items-end g-3">
                <div class="col-md-3">
                    <label for="filterCompany" class="form-label">
                        <i class="bi bi-search me-1"></i>Nazwa firmy
                    </label>
                    <InputText type="text" class="form-control form-control-sm" id="filterCompany" placeholder="Szukaj..." @bind-Value="filterModel.Name" />
                </div>
                <div class="col-md-7 text-start">
                    <button class="btn btn-sm btn-outline-secondary" @onclick="ResetFilters">
                        <i class="bi bi-arrow-clockwise"></i> Reset
                    </button>
                    <button class="btn btn-sm btn-outline-secondary" data-bs-toggle="collapse" data-bs-target="#advancedFiltersCollapse">
                        <i class="bi bi-funnel me-1"></i>Więcej filtrów
                    </button>
                    <button class="btn btn-sm btn-primary" @onclick="ApplyFilters">
                        <i class="bi bi-check-lg"></i> Zastosuj
                    </button>
                </div>
                <div class="col-md-2">
                    <label for="sortBy" class="form-label">
                        <i class="bi bi-sort-alpha-down me-1"></i>Sortowanie
                    </label>
                    <select class="form-select form-select-sm" id="sortBy" @bind="filterModel.SortBy" @bind:after="ApplyFilters">
                        <option value="name">Nazwa [A-Z]</option>
                        <option value="status">Status [A-Z]</option>
                    </select>
                </div>
            </div>

            <div id="advancedFiltersCollapse" class="collapse">
                <hr class="my-3">
                <div class="row align-items-end g-3">
                    <div class="col-md-2">
                        <label for="filterID" class="form-label">
                            <i class="bi bi-hash me-1"></i>ID
                        </label>
                        <InputNumber placeholder="np. 100" min="0" class="form-control form-control-sm" @bind-Value="filterModel.Id" id="filterID" />
                    </div>
                    <div class="col-md-3">
                        <label for="filterStatus" class="form-label">
                            <i class="bi bi-patch-check me-1"></i>Status
                        </label>
                        <select class="form-select form-select-sm" id="filterStatus" @bind="filterModel.Status">
                            <option value="">-- Wszyscy --</option>
                            <option value="Aktywny">Aktywny</option>
                            <option value="Nieaktywny">Nieaktywny</option>
                        </select>
                    </div>

                    <div class="col-md-3">
                        <label for="filterIssues" class="form-label">
                            <i class="bi bi-wrench me-1"></i>Usterki
                        </label>
                        <select class="form-select form-select-sm" id="filterIssues" @bind="filterHasIssuesString">
                            <option value="">-- Wszyscy --</option>
                            <option value="true">Z usterkami</option>
                            <option value="false">Bez usterek</option>
                        </select>
                    </div>
                    <div class="col-md-6 text-end">

                    </div>
                </div>
            </div>
        </div>
        @if (isLoading)
        {
            <div class="state-container text-center">
                <div>
                    <div class="loading-spinner"></div>
                    <h4 class="mb-3">Ładowanie danych...</h4>
                    <p class="text-muted">Proszę czekać, pobieramy dane...</p>
                </div>
            </div>
        }
        else if (contractors == null)
        {
            <div class="state-container">
                <div>
                    <div class="state-icon bg-danger bg-opacity-10 text-danger">
                        <i class="bi bi-x-circle"></i>
                    </div>
                    <h4 class="mb-3">Nie udało się pobrać danych z API!</h4>
                    <p class="text-muted mb-4">Sprawdź połączenie z internetem lub spróbuj ponownie później.</p>
                </div>
            </div>
        }
        else if (contractors.Count == 0)
        {
            <div class="state-container">
                <div>
                    <div class="state-icon bg-warning bg-opacity-10 text-warning">
                        <i class="bi bi-inbox"></i>
                    </div>
                    <h4 class="mb-3">Brak wykonawców spełniających kryteria</h4>
                    <p class="text-muted mb-4">Spróbuj zmienić filtry wyszukiwania lub zresetować wszystkie kryteria.</p>
                </div>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th style="width: 10%;" class="ps-3">ID</th>
                            <th style="width: 40%;">Nazwa firmy</th>
                            <th style="width: 25%;">Kontakt</th>
                            <th style="width: 15%;">Status</th>
                            <th style="width: 10%;" class="text-center pe-3">Akcje</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in contractors)
                        {                        
                            <tr>
                                <td><span class="badge text-bg-primary ms-2">#@c.Id</span></td>
                                <td>
                                    <strong>@c.CompanyName</strong>
                                </td>
                                <td>
                                    <div>
                                        @c.ContactInfo
                                    </div>
                                </td>
                                <td>
                                    <span class="">
                                        @c.Status
                                    </span>
                                </td>
                                <td class="text-center">
                                  @* <AuthorizeView Roles="Admin, Manager"> 
                                    <Authorized>  *@
                                    <button class="btn btn-sm btn-outline-secondary btn-action me-2 my-1 w-100" @onclick="() => EditContractor(c)">
                                        <i class="bi bi-pencil"></i> Edytuj
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger btn-action me-2 my-1 w-100" @onclick="() => DeleteContractor(c.Id)">
                                        <i class="bi bi-trash"></i> Usuń
                                    </button>
                                 @*    </Authorized>
                                    <NotAuthorized>
                                        <button class="btn btn-sm btn-outline-secondary btn-action me-2 my-1 w-100" disabled>
                                            <i class="bi bi-pencil"></i> Edytuj
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger btn-action me-2 my-1 w-100" disabled>
                                            <i class="bi bi-trash"></i> Usuń
                                        </button>
                                        </NotAuthorized>
                                 </AuthorizeView>   *@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="p-3 bg-light border-top">
                    <div class="row align-items-center">
                        <div class="col-12">
                            <small class="text-muted">
                                <span>Znalezione rekordy: @contractors.Count</span>
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- MODAL -->
    <div class="modal fade" id="contractorModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">@modalTitle</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <EditForm EditContext="editContext" OnValidSubmit="SaveContractor">
                        <DataAnnotationsValidator />
                        @if (!string.IsNullOrEmpty(modalErrorMessage))
                        {
                            <div class="alert alert-danger d-flex align-items-center mb-3">
                                <i class="bi bi-x-circle-fill me-2"></i>
                                <div>@modalErrorMessage</div>
                            </div>
                        }

                        <div class="mb-3">
                            <label class="form-label">Nazwa firmy *</label>
                            <InputText class="form-control" @bind-Value="contractorModel.CompanyName" />
                            <ValidationMessage For="@(() => contractorModel.CompanyName)" class="invalid-feedback" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Dane kontaktowe</label>
                            <InputText class="form-control" @bind-Value="contractorModel.ContactInfo" />
                        <ValidationMessage For="@(() => contractorModel.ContactInfo)" class="invalid-feedback" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Status</label>
                            <select class="form-select" @bind="contractorModel.Status">
                                <option value="Aktywny">Aktywny</option>
                                <option value="Nieaktywny">Nieaktywny</option>
                            </select>
                            <ValidationMessage For="@(() => contractorModel.Status)" class="invalid-feedback" />
                        </div>

                        <div class="text-end">
                            <button class="btn btn-secondary me-2" type="button" @onclick="CancelEdit">
                                Anuluj
                            </button>
                            <button class="btn btn-primary" type="submit">
                                @(editMode ? "Zapisz zmiany" : "Dodaj wykonawcę")
                            </button>
                        </div>
                    </EditForm>
                </div>

            </div>
        </div>
    </div>


@code {
    [CascadingParameter]
    private Task<AuthenticationState> authenticationStateTask { get; set; }

    private List<ContractorDto>? contractors;
    private ContractorFilterDto filterModel = new();
    private ContractorDto contractorModel = new();
    private string filterHasIssuesString = "";
    private bool isLoading = true;
    private bool editMode = false;
    private string? mainAlertMessage;
    private string mainAlertClass = "alert-success";
    private string? modalErrorMessage;

    private EditContext editContext;
    
    private string modalTitle = "Dodaj wykonawcę";

    protected override void OnInitialized()
    {
        editContext = new(contractorModel);
        editContext.SetFieldCssClassProvider(new BootstrapFieldCssClassProvider());
    }

    protected override async Task OnInitializedAsync()
    {
        var authState = await authenticationStateTask;
        if (authState.User.Identity != null && authState.User.Identity.IsAuthenticated)
        {
            await ApplyFilters();
        }
        else
        {
            // Teoretycznie [Authorize] to zablokuje, ale dla pewności:
            Navigation.NavigateTo("/login");
        }
    }

    private async Task ApplyFilters()
    {
        isLoading = true;
        contractors = null;

        try
        {
            // 1. Budowanie Query String
            var queryParams = new List<string>();

            if (!string.IsNullOrWhiteSpace(filterModel.Name))
                queryParams.Add($"name={Uri.EscapeDataString(filterModel.Name)}");

            if (filterModel.Id.HasValue)
                queryParams.Add($"id={filterModel.Id}");

            if (!string.IsNullOrWhiteSpace(filterModel.Status))
                queryParams.Add($"status={filterModel.Status}");

            if (!string.IsNullOrEmpty(filterHasIssuesString))
            {
                queryParams.Add($"hasIssues={filterHasIssuesString}");
            }

            if (!string.IsNullOrEmpty(filterModel.SortBy))
                queryParams.Add($"sortBy={filterModel.SortBy}");

            var queryString = queryParams.Any() ? "?" + string.Join("&", queryParams) : "";
            var response = await Http.GetAsync($"api/Contractor/search{queryString}");

            if (response.IsSuccessStatusCode)
            {
                // Pomyślne pobranie danych (w tym pusta lista dla 200 OK)
                contractors = await response.Content.ReadFromJsonAsync<List<ContractorDto>>() ?? new List<ContractorDto>();
            }
            else if (response.StatusCode == HttpStatusCode.NotFound || response.StatusCode == HttpStatusCode.NoContent)
            {
                contractors = new List<ContractorDto>();
            }
            else if (response.StatusCode == HttpStatusCode.Unauthorized)
            {
                Navigation.NavigateTo("/login");
            }
            else
            {
                // Inny błąd (np. 500)
                Console.WriteLine($"Błąd API: {response.StatusCode}");
                contractors = null; // Uruchomi komunikat o nieudanym pobieraniu
            }
        }
        catch (HttpRequestException ex) when (ex.StatusCode == HttpStatusCode.Unauthorized)
        {
            Navigation.NavigateTo("/login");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Błąd podczas pobierania danych: {ex.Message}");
            contractors = null;
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ResetFilters()
    {
        filterModel = new ContractorFilterDto(); // Resetuje model do domyślnych wartości
        filterHasIssuesString = "";
        await ApplyFilters();
    }


     private async Task StartAddingNewContractor()
    {
        contractorModel = new ContractorDto
        {
            Status = "Aktywny"
        };
        editMode = false;
        modalTitle = "Dodaj nowego wykonawcę";

        editContext = new(contractorModel);
        editContext.SetFieldCssClassProvider(new BootstrapFieldCssClassProvider());

        await ShowModal();
    }

    private async Task SaveContractor()
    {
        modalErrorMessage = null;

        try
        {
            HttpResponseMessage response;

            
            if (editMode)
            {
                response = await Http.PutAsJsonAsync($"api/Contractor?id={contractorModel.Id}", contractorModel);
            }
            else
            {
                response = await Http.PostAsJsonAsync("api/Contractor", contractorModel);
            }

            
            if (response.IsSuccessStatusCode)
            {
                if (editMode)
                    ShowAlert("Dane wykonawcy zostały pomyślnie zaktualizowane!", "success");
                else
                    ShowAlert("Nowy wykonawca został dodany pomyślnie!", "success");

                // 2. Sprzątamy i zamykamy modal
                contractorModel = new ContractorDto();
                editMode = false;
                await HideModal();
                await ApplyFilters();
            }
            else if (response.StatusCode == HttpStatusCode.Conflict) // Kod 409
            {
                // BŁĄD DUPLIKATU: Pobieramy komunikat z backendu i wyświetlamy go
                // NIE zamykamy modala, żeby użytkownik mógł poprawić dane
                var msg = await response.Content.ReadAsStringAsync();
                modalErrorMessage = !string.IsNullOrEmpty(msg) ? msg : "Taki wykonawca już istnieje.";
            }
            else if (response.StatusCode == HttpStatusCode.Unauthorized)
            {
                Navigation.NavigateTo("/login");
            }
            else
            {
                // INNY BŁĄD (np. 500 Server Error)
                modalErrorMessage = $"Wystąpił błąd zapisu (Kod: {response.StatusCode}).";
            }
        }
        catch (Exception ex)
        {
            if (ex.Message.Contains("Failed to fetch") || ex.Message.Contains("TypeError"))
            {
                modalErrorMessage = "Nie można połączyć się z serwerem. Sprawdź połączenie z internetem lub spróbuj później.";
            }
            else
            {
                modalErrorMessage = $"Wystąpił błąd krytyczny: {ex.Message}";
            }
        }
    }

    private async Task EditContractor(ContractorDto c)
    {
        contractorModel = new ContractorDto
        {
            Id = c.Id,
            CompanyName = c.CompanyName,
            ContactInfo = c.ContactInfo,
            Status = c.Status
        };
        editMode = true;
        modalTitle = $"Edytuj wykonawcę (ID: {c.Id})";

        editContext = new(contractorModel);
        editContext.SetFieldCssClassProvider(new BootstrapFieldCssClassProvider());

        await ShowModal();
    }

    private async Task DeleteContractor(int id)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Czy na pewno chcesz usunąć wykonawcę ID: {id}?");
        if (confirmed)
        {
            var response = await Http.DeleteAsync($"api/Contractor?id={id}");

            if (response.IsSuccessStatusCode)
            {
                ShowAlert("Wykonawca został usunięty.", "warning");
                await ApplyFilters();
            }
            else
            {
                ShowAlert("Nie udało się usunąć wykonawcy.", "danger");
            }
        }
    }

    private async Task CancelEdit()
    {
        contractorModel = new ContractorDto();
        editMode = false;
        await HideModal();
    }

    private async Task ShowModal() => await JSRuntime.InvokeVoidAsync("showModal", "contractorModal").AsTask();
    private async Task HideModal() => await JSRuntime.InvokeVoidAsync("hideModal", "contractorModal").AsTask();

    private void ShowAlert(string message, string type = "success")
    {
        mainAlertMessage = message;
        mainAlertClass = $"alert-{type}";

        _ = Task.Delay(5000).ContinueWith(_ =>
        {
            mainAlertMessage = null;
            InvokeAsync(StateHasChanged);
        });
    }

    public class ContractorDto
    {
        public int Id { get; set; }

        [Required(ErrorMessage = "Nazwa firmy jest wymagana.")]
        public string CompanyName { get; set; } = string.Empty;

        public string ContactInfo { get; set; } = string.Empty;

        public string Status { get; set; } = "Aktywny";
    }

    public class ContractorFilterDto
    {
        public string? Name { get; set; }
        public int? Id { get; set; }
        public string? Status { get; set; }
        public bool? HasIssues { get; set; }
        public string SortBy { get; set; } = "name";
    }
}
