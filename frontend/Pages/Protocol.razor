@page "/protocols"
@using System.Net.Http.Json
@using System.Net
@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Authorization
@using CHBackend.Models.DTOs

@attribute [Authorize]
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<div class="row align-items-center">
    <div class="col">
        <h2 class="fw-bold">Protokoły</h2>
        <p class="text-muted">Zarządzanie protokołami odbioru.</p>
    </div>
    <div class="col-auto">
        <button class="btn btn-sm btn-success" @onclick="StartAddingNewProtocol">
            <i class="bi bi-plus-circle me-2"></i>Nowy protokół
        </button>
    </div>
</div>

@if (!string.IsNullOrEmpty(mainAlertMessage))
{
    <div class="alert @mainAlertClass alert-dismissible fade show mb-3" role="alert">
        @if (mainAlertClass.Contains("success"))
        {
            <i class="bi bi-check-circle-fill me-2"></i>
        }
        else if (mainAlertClass.Contains("danger"))
        {
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
        }
        else
        {
            <i class="bi bi-info-circle-fill me-2"></i>
        }
        @mainAlertMessage
        <button type="button" class="btn-close" @onclick="() => mainAlertMessage = null"></button>
    </div>
}

<div class="card shadow mb-4 overflow-hidden">
    <div class="p-3 border-bottom">
        <div class="row align-items-end g-3">
            <div class="col-md-3">
                <label for="filterNumber" class="form-label">
                    <i class="bi bi-search me-1"></i>Nr protokołu / Nazwa
                </label>
                <InputText type="text" class="form-control form-control-sm" id="filterNumber"
                           placeholder="Szukaj..." @bind-Value="filterModel.ProtocolNumber" />
            </div>
            <div class="col-md-7 text-start">
                <button class="btn btn-sm btn-outline-secondary" @onclick="ResetFilters">
                    <i class="bi bi-arrow-clockwise"></i> Reset
                </button>
                <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#advancedFiltersCollapse">
                    <i class="bi bi-funnel me-1"></i>Więcej filtrów
                </button>
                <button class="btn btn-sm btn-primary" @onclick="ApplyFilters">
                    <i class="bi bi-check-lg"></i> Zastosuj
                </button>
            </div>
            <div class="col-md-2">
                <label for="sortBy" class="form-label">
                    <i class="bi bi-sort-alpha-down me-1"></i>Sortowanie
                </label>
                <select class="form-select form-select-sm" id="sortBy" @bind="sortOption" @bind:after="ApplyFilters">
                    <option value="date">Data [Najnowsze]</option>
                    <option value="protocolnumber">Nr protokołu [A-Z]</option>
                    <option value="area">Obszar [A-Z]</option>
                    <option value="state">Status</option>
                </select>
            </div>
        </div>

        <div id="advancedFiltersCollapse" class="collapse">
            <hr class="my-3">
            <div class="row align-items-end g-3">

                <div class="col-md-2">
                    <label for="filterID" class="form-label">
                        <i class="bi bi-hash me-1"></i>ID
                    </label>
                    <InputNumber placeholder="np. 10" class="form-control form-control-sm"
                                 @bind-Value="filterModel.Id" id="filterID" />
                </div>

                <div class="col-md-3">
                    <label for="filterState" class="form-label">
                        <i class="bi bi-toggle-on me-1"></i>Status
                    </label>
                    <select class="form-select form-select-sm" id="filterState" @bind="filterModel.State">
                        <option value="">-- Wszystkie --</option>
                        <option value="Open">Otwarty</option>
                        <option value="Closed">Zamknięty</option>
                    </select>
                </div>

                <div class="col-md-3">
                    <label for="filterArea" class="form-label">
                        <i class="bi bi-geo-alt me-1"></i>Obszar
                    </label>
                    <InputText class="form-control form-control-sm" placeholder="np. Stacja DRIM"
                               @bind-Value="filterModel.Area" id="filterArea" />
                </div>

                <div class="col-md-3">
                    <label for="filterType" class="form-label">
                        <i class="bi bi-tags me-1"></i>Rodzaj protokołu
                    </label>
                    <select class="form-select form-select-sm" id="filterType" @bind="filterModel.Type">
                        <option value="">-- Wszystkie --</option>
                        <option value="OCB">OCB</option>
                        <option value="OKB">OKB</option>
                        <option value="OTR">OTR</option>
                    </select>
                </div>
                <div class="col-md-1"></div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="state-container text-center p-5">
            <div>
                <div class="spinner-border text-primary mb-3" role="status"></div>
                <h4 class="mb-3">Ładowanie danych...</h4>
                <p class="text-muted">Proszę czekać, pobieramy dane...</p>
            </div>
        </div>
    }
    else if (protocols == null)
    {
        <div class="state-container text-center p-5">
            <div>
                <div class="state-icon bg-danger bg-opacity-10 text-danger mb-3 d-inline-block p-3 rounded-circle">
                    <i class="bi bi-x-circle fs-1"></i>
                </div>
                <h4 class="mb-3">Nie udało się pobrać danych z API!</h4>
                <p class="text-muted mb-4">Sprawdź połączenie z internetem lub spróbuj ponownie później.</p>
            </div>
        </div>
    }
    else if (protocols.Count == 0)
    {
        <div class="state-container text-center p-5">
            <div>
                <div class="state-icon bg-warning bg-opacity-10 text-warning mb-3 d-inline-block p-3 rounded-circle">
                    <i class="bi bi-inbox fs-1"></i>
                </div>
                <h4 class="mb-3">Brak protokołów spełniających kryteria</h4>
                <p class="text-muted mb-4">Spróbuj zmienić filtry wyszukiwania lub zresetować wszystkie kryteria.</p>
            </div>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover mb-0 align-middle">
                <thead>
                    <tr>
                        <th style="width: 5%;" class="ps-3">ID</th>
                        <th style="width: 10%;">Data</th>
                        <th style="width: 15%;">Nr protokołu</th>
                        <th style="width: 10%;">Rodzaj</th>
                        <th style="width: 10%;">Obszar</th>
                        <th style="width: 10%;">Nr dok.</th>
                        <th style="width: 15%;">Status</th>
                        <th style="width: 10%;">Data usunięcia</th>
                        <th style="width: 5%;">Status</th>
                        <th style="width: 10%;" class="text-center">Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in protocols)
                    {
                        <tr>
                            <td><span class="badge text-bg-primary ms-2">#@item.Id</span></td>
                            <td>@item.ReceiptDate.ToShortDateString()</td>
                            <td><strong>@item.ProtocolNumber</strong></td>
                            <td>@item.Type</td>
                            <td>@item.Area</td>
                            <td>@item.DocumentNumber</td>
                            <td><small>@item.StatusDescription</small></td>
                            <td>@(item.FixDate?.ToShortDateString() ?? "-")</td>
                            <td>
                                <span class="badge @(item.State == "Open" ? "bg-success" : "bg-secondary")">
                                    @(item.State == "Open" ? "Otwarty" : "Zamknięty")
                                </span>
                            </td>
                            <td class="text-center">
                                <button class="btn btn-sm btn-outline-info btn-action me-2 my-1 w-100" @onclick="() => DownloadPdf(item)" title="Pobierz PDF">
                                    <i class="bi bi-file-earmark-pdf"></i> Raport
                                </button>
                                <button class="btn btn-sm btn-outline-secondary btn-action me-2 my-1 w-100" @onclick="() => EditProtocol(item)" title="Edytuj">
                                    <i class="bi bi-pencil"></i> Edytuj
                                </button>
                                <button class="btn btn-sm btn-outline-danger btn-action my-1 w-100" @onclick="() => DeleteProtocol(item.Id)" title="Usuń">
                                    <i class="bi bi-trash"></i> Usuń
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="p-3 bg-light border-top">
                <div class="row align-items-center">
                    <div class="col-12">
                        <small class="text-muted">
                            <span>Znalezione rekordy: @protocols.Count</span>
                        </small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div class="modal fade" id="protocolModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@modalTitle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <EditForm Model="@protocolModel" OnValidSubmit="SaveProtocol">
                    <DataAnnotationsValidator />

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Data protokołu *</label>
                            <InputDate class="form-control" @bind-Value="protocolModel.ReceiptDate" />
                            <ValidationMessage For="@(() => protocolModel.ReceiptDate)" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Status</label>
                            <InputSelect class="form-select" @bind-Value="protocolModel.State">
                                <option value="Open">Otwarty</option>
                                <option value="Closed">Zamknięty</option>
                            </InputSelect>
                        </div>
                        <div class="col-12">
                            <label class="form-label">Nr protokołu (Opis) *</label>
                            <InputText class="form-control" @bind-Value="protocolModel.ProtocolNumber" />
                            <ValidationMessage For="@(() => protocolModel.ProtocolNumber)" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Rodzaj protokołu</label>
                            <InputSelect class="form-select" @bind-Value="protocolModel.Type">
                                <option value="">-- Wybierz rodzaj --</option>
                                <option value="OCB">OCB</option>
                                <option value="OKB">OKB</option>
                                <option value="OTR">OTR</option>
                            </InputSelect>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Obszar</label>
                            <InputText class="form-control" @bind-Value="protocolModel.Area" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Nr dokumentacji</label>
                            <InputText class="form-control" @bind-Value="protocolModel.DocumentNumber" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Data usunięcia usterek</label>
                            <InputDate class="form-control" @bind-Value="protocolModel.FixDate" />
                        </div>
                        <div class="col-12">
                            <label class="form-label">Status (Opis wyniku)</label>
                            <InputTextArea class="form-control" @bind-Value="protocolModel.StatusDescription" rows="2" />
                        </div>
                    </div>

                    <div class="text-end mt-4">
                        <button type="submit" class="btn btn-primary">Zapisz</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>

@code {
    private List<ProtocolListDto>? protocols;
    private ProtocolDto protocolModel = new();
    private ProtocolFilterDto filterModel = new();
    private bool isLoading = true;
    private bool editMode = false;
    private string modalTitle = "Nowy protokół";
    private string sortOption = "date"; // ✅ Naprawiony błąd "sortOption nie istnieje"

    private string? mainAlertMessage;
    private string mainAlertClass = "alert-success";

    protected override async Task OnInitializedAsync()
    {
        await ApplyFilters();
    }

    private async Task ApplyFilters()
    {
        isLoading = true;
        protocols = null; // Wyczyszczenie listy przed ładowaniem (efekt wizualny loadera)

        try
        {
            // Przypisanie sortowania z UI do modelu
            filterModel.SortBy = sortOption;

            var queryParams = new List<string>();

            if (filterModel.Id.HasValue)
                queryParams.Add($"id={filterModel.Id.Value}");

            if (!string.IsNullOrEmpty(filterModel.ProtocolNumber))
                queryParams.Add($"protocolNumber={Uri.EscapeDataString(filterModel.ProtocolNumber)}");

            if (!string.IsNullOrEmpty(filterModel.Area))
                queryParams.Add($"area={Uri.EscapeDataString(filterModel.Area)}");

            if (!string.IsNullOrEmpty(filterModel.State))
                queryParams.Add($"state={filterModel.State}");

            // ✅ Dodano obsługę parametru Type
            if (!string.IsNullOrEmpty(filterModel.Type))
                queryParams.Add($"type={Uri.EscapeDataString(filterModel.Type)}");

            // ✅ Dodano obsługę parametru SortBy
            queryParams.Add($"sortBy={sortOption}");

            var queryString = queryParams.Any() ? "?" + string.Join("&", queryParams) : "";

            protocols = await Http.GetFromJsonAsync<List<ProtocolListDto>>($"api/Protocol/search{queryString}");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
            mainAlertMessage = "Błąd pobierania danych.";
            mainAlertClass = "alert-danger";
        }
        isLoading = false;
    }

    private async Task ResetFilters()
    {
        filterModel = new ProtocolFilterDto();
        sortOption = "date";
        await ApplyFilters();
    }

    private async Task StartAddingNewProtocol()
    {
        protocolModel = new ProtocolDto { ReceiptDate = DateTime.Now, State = "Open" };
        editMode = false;
        modalTitle = "Nowy protokół";
        await ShowModal();
    }

    private async Task EditProtocol(ProtocolListDto item)
    {
        // ✅ Naprawiony błąd konwersji: Mapowanie ListDto -> Dto
        protocolModel = new ProtocolDto
        {
            Id = item.Id,
            ReceiptDate = item.ReceiptDate,
            ProtocolNumber = item.ProtocolNumber,
            Type = item.Type,
            Area = item.Area,
            DocumentNumber = item.DocumentNumber,
            StatusDescription = item.StatusDescription,
            FixDate = item.FixDate,
            State = item.State
        };
        editMode = true;
        modalTitle = $"Edycja protokołu #{item.Id}";
        await ShowModal();
    }

    private async Task SaveProtocol()
    {
        HttpResponseMessage response;
        if (editMode)
        {
            response = await Http.PutAsJsonAsync($"api/Protocol/{protocolModel.Id}", protocolModel);
        }
        else
        {
            response = await Http.PostAsJsonAsync("api/Protocol", protocolModel);
        }

        if (response.IsSuccessStatusCode)
        {
            await HideModal();
            mainAlertMessage = "Zapisano pomyślnie!";
            mainAlertClass = "alert-success";
            await ApplyFilters();
        }
        else
        {
            mainAlertMessage = "Błąd zapisu.";
            mainAlertClass = "alert-danger";
        }
    }

    private async Task DeleteProtocol(int id)
    {
        bool confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Czy na pewno usunąć ten protokół?");
        if (confirmed)
        {
            var response = await Http.DeleteAsync($"api/Protocol/{id}");
            if (response.IsSuccessStatusCode)
            {
                await ApplyFilters();
            }
        }
    }

    private async Task DownloadPdf(ProtocolListDto item)
    {
        try
        {
            // 1. Pobieramy plik jako strumień z API (ważne: HttpClient ma token Auth)
            var response = await Http.GetAsync($"api/Protocol/{item.Id}/pdf", HttpCompletionOption.ResponseHeadersRead);

            if (!response.IsSuccessStatusCode)
            {
                mainAlertMessage = "Nie udało się wygenerować PDF.";
                mainAlertClass = "alert-danger";
                return;
            }

            // 2. Pobieramy strumień
            var fileStream = await response.Content.ReadAsStreamAsync();
            using var streamRef = new DotNetStreamReference(fileStream);

            // 3. Wywołujemy JS do zapisu pliku
            var fileName = $"Protokol_{item.Id}.pdf"; // Możesz tu użyć item.ProtocolNumber dla lepszej nazwy
            await JSRuntime.InvokeVoidAsync("downloadFileFromStream", fileName, streamRef);
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
            mainAlertMessage = "Błąd pobierania pliku PDF.";
            mainAlertClass = "alert-danger";
        }
    }

    private async Task ShowModal() => await JSRuntime.InvokeVoidAsync("showModal", "protocolModal");
    private async Task HideModal() => await JSRuntime.InvokeVoidAsync("hideModal", "protocolModal");
}