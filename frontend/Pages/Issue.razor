@page "/issues"
@using System.Net.Http.Json
@using System.Net
@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using CHFrontend.Helpers
@attribute [Authorize]
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@inject AuthenticationStateProvider AuthenticationStateProvider

<div class="row align-items-center">
    <div class="col">
        <h2 class="fw-bold"> Usterki</h2>
        <p class="text-muted">Przeglądaj, dodawaj i modyfikuj zgłoszenia dotyczące usterek.</p>
    </div>
    <div class="col-auto">
        <button class="btn btn-sm btn-success" @onclick="StartAddingNewIssue">
            <i class="bi bi-plus-circle me-2"></i>Nowa usterka
        </button>
    </div>
</div>

@if (!string.IsNullOrEmpty(mainAlertMessage))
{
    <div class="alert @mainAlertClass alert-dismissible fade show mb-3" role="alert">
        @if (mainAlertClass.Contains("success"))
        {
            <i class="bi bi-check-circle-fill me-2"></i>
        }
        else if (mainAlertClass.Contains("danger"))
        {
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
        }
        else
        {
            <i class="bi bi-info-circle-fill me-2"></i>
        }

        @mainAlertMessage
        <button type="button" class="btn-close" @onclick="() => mainAlertMessage = null"></button>
    </div>
}

<div class="card shadow mb-4 overflow-hidden">
    <div class="p-3 border-bottom">
        <div class="row align-items-end g-3">
            <div class="col-md-3">
                <label for="filterTitle" class="form-label">
                    <i class="bi bi-search me-1"></i>Tytuł usterki
                </label>
                <InputText type="text" class="form-control form-control-sm" id="filterTitle" placeholder="Szukaj..."
                    @bind-Value="issueFilterModel.Title" />
            </div>
            <div class="col-md-7 text-start">
                <button class="btn btn-sm btn-outline-secondary" @onclick="ResetFilters">
                    <i class="bi bi-arrow-clockwise"></i> Reset
                </button>
                <button class="btn btn-sm btn-outline-secondary" data-bs-toggle="collapse"
                    data-bs-target="#advancedFiltersCollapse">
                    <i class="bi bi-funnel me-1"></i>Więcej filtrów
                </button>
                <button class="btn btn-sm btn-primary" @onclick="ApplyFilters">
                    <i class="bi bi-check-lg"></i> Zastosuj
                </button>
            </div>
            <div class="col-md-2">
                <label for="sortBy" class="form-label">
                    <i class="bi bi-sort-alpha-down me-1"></i>Sortowanie
                </label>
                <select class="form-select form-select-sm" id="sortBy" @bind="sortOption" @bind:after="ApplyFilters">
                    <option value="title">Tytuł [A-Z]</option>
                    <option value="status">Status [A-Z]</option>
                    <option value="contractor">Wykonawca [A-Z]</option>
                </select>
            </div>
        </div>

        <div id="advancedFiltersCollapse" class="collapse">
            <hr class="my-3">
            <div class="row align-items-end g-3">
                <div class="col-md-2">
                    <label for="filterID" class="form-label">
                        <i class="bi bi-hash me-1"></i>ID
                    </label>
                    <InputNumber placeholder="np. 100" min="0" class="form-control form-control-sm"
                        @bind-Value="issueFilterModel.Id" id="filterID" />
                </div>
                <div class="col-md-3">
                    <label for="filterStatus" class="form-label">
                        <i class="bi bi-patch-check me-1"></i>Status
                    </label>
                    <select class="form-select form-select-sm" id="filterStatus" @bind="issueFilterModel.Status">
                        <option value="">-- Wszystkie --</option>
                        <option value="Nowa">Nowa</option>
                        <option value="W trakcie">W trakcie</option>
                        <option value="Zakończona">Zakończona</option>
                    </select>
                </div>

                <div class="col-md-3">
                    <label for="filterContractor" class="form-label">
                        <i class="bi bi-person-lines-fill me-1"></i>Wykonawca
                    </label>
                    <select class="form-select form-select-sm" id="filterContractor"
                        @bind="issueFilterModel.ContractorId">
                        <option value="">-- Wszyscy --</option>
                        @foreach (var c in contractors)
                        {
                            <option value="@c.Id">@c.CompanyName</option>
                        }
                    </select>
                </div>
                <div class="col-md-6 text-end">
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="state-container text-center">
            <div>
                <div class="loading-spinner"></div>
                <h4 class="mb-3">Ładowanie danych...</h4>
                <p class="text-muted">Proszę czekać, pobieramy dane...</p>
            </div>
        </div>
    }
    else if (issues == null)
    {
        <div class="state-container">
            <div>
                <div class="state-icon bg-danger bg-opacity-10 text-danger">
                    <i class="bi bi-x-circle"></i>
                </div>
                <h4 class="mb-3">Nie udało się pobrać danych z API!</h4>
                <p class="text-muted mb-4">Sprawdź połączenie z internetem lub spróbuj ponownie później.</p>
            </div>
        </div>
    }
    else if (issues.Count == 0)
    {
        <div class="state-container">
            <div>
                <div class="state-icon bg-warning bg-opacity-10 text-warning">
                    <i class="bi bi-inbox"></i>
                </div>
                <h4 class="mb-3">Brak usterek spełniających kryteria</h4>
                <p class="text-muted mb-4">Spróbuj zmienić filtry wyszukiwania lub zresetować wszystkie kryteria.</p>
            </div>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th style="width: 5%;" class="ps-3">ID</th>
                        <th style="width: 15%;">Zdjęcie</th>
                        <th style="width: 15%;">Tytuł</th>
                        <th style="width: 30%;">Opis</th>
                        <th style="width: 10%;">Lokalizacja</th>
                        <th style="width: 10%;">Status</th>
                        <th style="width: 10%;">Wykonawca</th>
                        <th style="width: 10%;" class="text-center">Akcje</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var i in issues)
                    {
                        <tr>
                            <td><span class="badge text-bg-primary ms-2">#@i.Id</span></td>
                            <td>
                                @if (!string.IsNullOrWhiteSpace(i.PhotoUrl))
                                {
                                    <a href="@($"{ApiBase}{i.PhotoUrl}")" target="_blank" rel="noopener">
                                        <img src="@($"{ApiBase}{i.PhotoUrl}")"
                                            style="width:60px;height:60px;object-fit:cover;border-radius:6px;"
                                            alt="Zdjęcie usterki" />
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">brak</span>
                                }
                            </td>

                            <td>
                                <strong>@i.Title</strong>
                            </td>
                            <td>
                                <div>
                                    @i.Description
                                </div>
                            </td>
                            <td>
                                <span class="">
                                    @i.Location
                                </span>
                            </td>
                            <td>
                                <span class="">
                                    @i.Status
                                </span>
                            </td>
                            <td>
                                <span class="">
                                    @i.ContractorName
                                </span>
                            </td>
                            <td class="text-center">
                                <button class="btn btn-sm btn-outline-secondary btn-action me-2 my-1 w-100"
                                    @onclick="() => EditIssue(i)">
                                    <i class="bi bi-pencil"></i> Edytuj
                                </button>
                                <button class="btn btn-sm btn-outline-danger btn-action my-1 w-100"
                                    @onclick="() => DeleteIssue(i.Id)">
                                    <i class="bi bi-trash"></i> Usuń
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="p-3 bg-light border-top">
                <div class="row align-items-center">
                    <div class="col-12">
                        <small class="text-muted">
                            <span>Znalezione rekordy: @issues.Count</span>
                        </small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- MODAL: Dodawanie / Edycja Usterki -->
<div class="modal fade" id="issueModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">@modalTitle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <EditForm OnValidSubmit="SaveIssue" EditContext="@editContext">
                    <div class="row">
                        <DataAnnotationsValidator />
                        @if (!string.IsNullOrEmpty(modalErrorMessage))
                        {
                            <div class="alert alert-danger d-flex align-items-center mb-3">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                <div>@modalErrorMessage</div>
                            </div>
                        }
                        <div class="col-12 mb-3">
                            <label>Tytuł *</label>
                            <InputText class="form-control" @bind-Value="issueModel.Title" />
                            <ValidationMessage For="@(() => issueModel.Title)" class="invalid-feedback" />
                        </div>

                        <div class="col-12 mb-3">
                            <label>Opis *</label>
                            <InputTextArea class="form-control" @bind-Value="issueModel.Description" rows="4" />
                            <ValidationMessage For="@(() => issueModel.Description)" class="invalid-feedback" />
                        </div>

                        <div class="col-12 col-md-6 mb-3">
                            <label>Lokalizacja *</label>
                            <InputText class="form-control" @bind-Value="issueModel.Location" />
                            <ValidationMessage For="@(() => issueModel.Location)" class="invalid-feedback" />
                        </div>

                        <div class="col-12 col-md-6 mb-3">
                            <label>Status *</label>
                            <select class="form-select" @bind="issueModel.Status">
                                <option value="Nowa">Nowa</option>
                                <option value="W trakcie">W trakcie</option>
                                <option value="Zakończona">Zakończona</option>
                            </select>
                            <ValidationMessage For="@(() => issueModel.Status)" class="invalid-feedback" />
                        </div>

                        <div class="col-12 col-md-6 mb-3">
                            <label>Wykonawca *</label>
                            <select class="form-select" @bind="issueModel.ContractorId">
                                @foreach (var c in contractors)
                                {
                                    <option value="@c.Id">@c.CompanyName</option>
                                }
                            </select>
                            <ValidationMessage For="@(() => issueModel.ContractorId)" class="invalid-feedback" />
                        </div>

                        <div class="col-12 col-md-6 mb-3">
                            <label for="formImage">Zdjęcie</label>
                            <InputFile OnChange="HandleFileSelected" class="form-control" accept="image/*"
                                id="formImage" />
                        </div>
                    </div>

                    <div class="text-end">
                        <button class="btn btn-primary" type="submit">
                            @(editMode ? "Zapisz zmiany" : "Dodaj usterkę")
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>

@code {
    // <<< TU USTAW URL BACKENDU (tam gdzie leci API i wwwroot/photos) >>>
    private const string ApiBase = "http://localhost:5150";

    [CascadingParameter]
    private Task<AuthenticationState> authenticationStateTask { get; set; }

    private List<IssueListDto>? issues;
    private List<ContractorDto> contractors = new();
    private IssueDto issueModel = new();
    private EditContext editContext;
    private bool isLoading = true;
    private bool editMode = false;

    private IssueFilterDto issueFilterModel = new();
    private string sortOption = "title";
    private string? mainAlertMessage;
    private string mainAlertClass = "alert-success";
    private string? modalErrorMessage;

    private string modalTitle = "Dodaj usterkę";
    private IBrowserFile? selectedFile;

    protected override void OnInitialized()
    {
        editContext = new(issueModel);
        editContext.SetFieldCssClassProvider(new BootstrapFieldCssClassProvider());
    }

    protected override async Task OnInitializedAsync()
    {
        var authState = await authenticationStateTask;
        var user = authState.User;

        if (user.Identity != null && user.Identity.IsAuthenticated)
        {
            await LoadContractors();
            await ApplyFilters();
        }
        else
        {
            Navigation.NavigateTo("/login");
        }
    }

    private async Task LoadContractors()
    {
        try
        {
            contractors = await Http.GetFromJsonAsync<List<ContractorDto>>("api/Contractor/search?ActiveOnly=true")
            ?? new List<ContractorDto>();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Błąd ładowania wykonawców: {ex.Message}");
            contractors = new List<ContractorDto>();
        }
    }

    private async Task ApplyFilters()
    {
        isLoading = true;
        issues = null;

        try
        {
            issueFilterModel.SortBy = sortOption;

            var queryParams = new List<string>();

            if (issueFilterModel.Id.HasValue)
                queryParams.Add($"id={issueFilterModel.Id.Value}");

            if (!string.IsNullOrWhiteSpace(issueFilterModel.Title))
                queryParams.Add($"title={Uri.EscapeDataString(issueFilterModel.Title)}");

            if (!string.IsNullOrWhiteSpace(issueFilterModel.Status))
                queryParams.Add($"status={issueFilterModel.Status}");

            if (issueFilterModel.ContractorId.HasValue)
                queryParams.Add($"contractorId={issueFilterModel.ContractorId.Value}");

            queryParams.Add($"sortBy={issueFilterModel.SortBy}");

            var queryString = queryParams.Any() ? "?" + string.Join("&", queryParams) : "";

            issues = await Http.GetFromJsonAsync<List<IssueListDto>>($"api/Issue/search{queryString}");
        }
        catch (HttpRequestException ex) when (ex.StatusCode == HttpStatusCode.Unauthorized)
        {
            Navigation.NavigateTo("/login");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Błąd podczas pobierania danych: {ex.Message}");
            issues = null;
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ResetFilters()
    {
        issueFilterModel = new IssueFilterDto();
        sortOption = "title";
        await ApplyFilters();
    }

    private void ApplySort()
    {
        if (issues == null || issues.Count == 0)
            return;

        if (sortOption == "title")
            issues = issues.OrderBy(i => i.Title).ToList();
        else if (sortOption == "status")
            issues = issues.OrderBy(i => i.Status).ToList();

        StateHasChanged();
    }

    private async Task StartAddingNewIssue()
    {
        issueModel = new IssueDto
        {
            Status = "Nowa",
            ContractorId = contractors.Count > 0 ? contractors.First()?.Id : null
        };
        selectedFile = null;
        editMode = false;
        modalTitle = "Dodaj nową usterkę";

        editContext = new(issueModel);
        editContext.SetFieldCssClassProvider(new BootstrapFieldCssClassProvider());

        await ShowModal();
    }

    private async Task EditIssue(IssueListDto i)
    {
        issueModel = new IssueDto
        {
            Id = i.Id,
            Title = i.Title,
            Description = i.Description,
            Location = i.Location,
            Status = i.Status,
            ContractorId = i.ContractorId
        };

        editMode = true;
        modalTitle = $"Edytuj usterkę (ID: {i.Id})";

        editContext = new(issueModel);
        editContext.SetFieldCssClassProvider(new BootstrapFieldCssClassProvider());

        await ShowModal();
    }

    private async Task SaveIssue()
    {
        modalErrorMessage = null;
        mainAlertMessage = null;

        try
        {
            HttpResponseMessage? response = null;

            if (editMode)
            {
                response = await Http.PutAsJsonAsync($"api/Issue/{issueModel.Id}", issueModel);

                if (!response.IsSuccessStatusCode)
                {
                    modalErrorMessage = $"Błąd przy aktualizacji: {response.StatusCode}";
                    return;
                }

                string successMsg = "Usterka została pomyślnie zaktualizowana!";

                if (selectedFile != null)
                {
                    using var content = new MultipartFormDataContent();
                    var stream = selectedFile.OpenReadStream(maxAllowedSize: 10_000_000);
                    content.Add(new StreamContent(stream), "file", selectedFile.Name);

                    var photoResponse = await Http.PostAsync($"api/Issue/{issueModel.Id}/photos", content);

                    if (!photoResponse.IsSuccessStatusCode)
                    {
                        modalErrorMessage = $"Dane tekstowe zapisane, ale wystąpił błąd zdjęcia: {photoResponse.StatusCode}";
                        return;
                    }

                    successMsg = "Zdjęcie zostało zaktualizowane!";
                }

                ShowAlert(successMsg, "success");
            }
            else
            {
                using var content = new MultipartFormDataContent();
                content.Add(new StringContent(issueModel.Title ?? ""), "Title");
                content.Add(new StringContent(issueModel.Description ?? ""), "Description");
                content.Add(new StringContent(issueModel.Location ?? ""), "Location");
                content.Add(new StringContent(issueModel.Status ?? "Nowa"), "Status");
                content.Add(new StringContent(issueModel.ContractorId?.ToString() ?? ""), "ContractorId");

                if (selectedFile != null)
                {
                    var stream = selectedFile.OpenReadStream(maxAllowedSize: 10_000_000);
                    var fileContent = new StreamContent(stream);
                    fileContent.Headers.ContentType = null;
                    content.Add(fileContent, "photo", selectedFile.Name);
                }

                response = await Http.PostAsync("api/Issue", content);

                if (!response.IsSuccessStatusCode)
                {
                    modalErrorMessage = $"Nie udało się dodać usterki. Kod błędu: {response.StatusCode}";
                    return;
                }

                ShowAlert("Nowa usterka została dodana pomyślnie!", "success");
            }

            editMode = false;
            await HideModal();
            issueModel = new IssueDto();
            selectedFile = null;
            await ApplyFilters();
        }
        catch (Exception ex)
        {
            if (ex.Message.Contains("Failed to fetch") || ex.Message.Contains("TypeError"))
                modalErrorMessage = "Nie można połączyć się z serwerem. Sprawdź połączenie z internetem lub spróbuj później.";
            else
                modalErrorMessage = $"Wystąpił nieoczekiwany błąd: {ex.Message}";
        }
    }

    private async Task DeleteIssue(int id)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Czy na pewno chcesz usunąć usterkę ID: {id}?");
        if (confirmed)
        {
            var response = await Http.DeleteAsync($"api/Issue/{id}");

            if (response.IsSuccessStatusCode)
            {
                ShowAlert("Usterka została usunięta.", "warning");
                await ApplyFilters();
            }
            else
            {
                ShowAlert("Nie udało się usunąć usterki.", "danger");
            }
        }
    }

    private void HandleFileSelected(InputFileChangeEventArgs e)
    {
        selectedFile = e.File;
    }

    private Task ShowModal() => JSRuntime.InvokeVoidAsync("showModal", "issueModal").AsTask();
    private Task HideModal() => JSRuntime.InvokeVoidAsync("hideModal", "issueModal").AsTask();

    public class IssueDto
    {
        [Required(ErrorMessage = "Tytuł jest wymagany.")]
        public string Title { get; set; } = string.Empty;

        [Required(ErrorMessage = "Opis jest wymagany.")]
        public string Description { get; set; } = string.Empty;

        [Required(ErrorMessage = "Lokalizacja jest wymagana.")]
        public string Location { get; set; } = string.Empty;

        [Required(ErrorMessage = "Wybór statusu jest wymagany.")]
        public string Status { get; set; } = "Nowa";

        [Required(ErrorMessage = "Wybór wykonawcy jest wymagany.")]
        public int? ContractorId { get; set; }

        public int Id { get; set; }
    }

    private void ShowAlert(string message, string type = "success")
    {
        mainAlertMessage = message;
        mainAlertClass = $"alert-{type}";

        _ = Task.Delay(5000).ContinueWith(_ =>
        {
            mainAlertMessage = null;
            InvokeAsync(StateHasChanged);
        });
    }

    public class ContractorDto
    {
        public int Id { get; set; }
        public string CompanyName { get; set; } = "";
    }

    public class IssueFilterDto
    {
        public int? Id { get; set; }
        public string? Title { get; set; }
        public string? Status { get; set; }
        public int? ContractorId { get; set; }
        public string SortBy { get; set; } = "title";
    }

    public class IssueListDto
    {
        public int Id { get; set; }
        public string Title { get; set; } = "";
        public string Description { get; set; } = "";
        public string Location { get; set; } = "";
        public string Status { get; set; } = "";
        public int? ContractorId { get; set; }
        public string? ContractorName { get; set; }
        public string? PhotoUrl { get; set; }
    }
}